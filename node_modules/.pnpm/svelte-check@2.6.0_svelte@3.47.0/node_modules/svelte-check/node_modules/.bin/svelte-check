#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/var/www/seer.pm/node_modules/.pnpm/svelte-check@2.6.0_svelte@3.47.0/node_modules/svelte-check/bin/node_modules:/var/www/seer.pm/node_modules/.pnpm/svelte-check@2.6.0_svelte@3.47.0/node_modules/svelte-check/node_modules:/var/www/seer.pm/node_modules/.pnpm/svelte-check@2.6.0_svelte@3.47.0/node_modules:/var/www/seer.pm/node_modules/.pnpm/node_modules:/var/www/seer.pm/node_modules:/var/www/node_modules:/var/node_modules:/node_modules"
else
  export NODE_PATH="$NODE_PATH:/var/www/seer.pm/node_modules/.pnpm/svelte-check@2.6.0_svelte@3.47.0/node_modules/svelte-check/bin/node_modules:/var/www/seer.pm/node_modules/.pnpm/svelte-check@2.6.0_svelte@3.47.0/node_modules/svelte-check/node_modules:/var/www/seer.pm/node_modules/.pnpm/svelte-check@2.6.0_svelte@3.47.0/node_modules:/var/www/seer.pm/node_modules/.pnpm/node_modules:/var/www/seer.pm/node_modules:/var/www/node_modules:/var/node_modules:/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/svelte-check" "$@"
else
  exec node  "$basedir/../../bin/svelte-check" "$@"
fi
